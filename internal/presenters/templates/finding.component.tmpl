  {{- if or (not .Attributes.Suppression) (and (.Attributes.Suppression) (eq .Attributes.Suppression.Status "rejected"))}} âœ— {{else}} ! {{end -}}
  [{{.Attributes.Rating.Severity.Value}}]
{{- end}}